<body>
	
  <h1>üé§ transcrition</h1>

  <div id="transcricao">Clique no bot√£o para come√ßar a falar.</div>

  <button id="btnTranscricao" onclick="alternarGravacao()">üéôÔ∏è Iniciar Transcri√ß√£o</button>
  <button id="btnWhatsApp" onclick="compartilharWhatsApp()">üì§ Compartilhar no WhatsApp</button>

  <p id="alerta"></p>

 

  <script>
    let reconhecimento;
    let gravando = false;
    let textoFinal = '';

    if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
      document.getElementById('alerta').innerText = '‚ùå Seu navegador n√£o suporta reconhecimento de voz. Use o Chrome no celular ou PC.';
    } else {
      const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
      reconhecimento = new SpeechRecognition();
      reconhecimento.lang = 'pt-BR';
      reconhecimento.interimResults = true;
      reconhecimento.continuous = false;

      reconhecimento.onresult = (event) => {
        let texto = '';
        for (let i = event.resultIndex; i < event.results.length; ++i) {
          texto += event.results[i][0].transcript;
        }
        textoFinal = texto;
        document.getElementById('transcricao').innerText = texto;
      };

      reconhecimento.onerror = (event) => {
        document.getElementById('alerta').innerText = 'Erro: ' + event.error;
        pararGravacao();
      };

      reconhecimento.onend = () => {
        pararGravacao();
      };
    }

    function alternarGravacao() {
      if (gravando) {
        pararGravacao();
      } else {
        iniciarGravacao();
      }
    }

    function iniciarGravacao() {
      if (!reconhecimento) return;

      gravando = true;
      textoFinal = '';
      document.getElementById('transcricao').innerText = 'üéôÔ∏è Ouvindo...';
      document.getElementById('btnTranscricao').innerText = 'üõë Parar';
      document.getElementById('btnTranscricao').classList.add('gravando');
      reconhecimento.start();
    }

    function pararGravacao() {
      if (!reconhecimento) return;

      gravando = false;
      document.getElementById('btnTranscricao').innerText = 'üéôÔ∏è Iniciar Transcri√ß√£o';
      document.getElementById('btnTranscricao').classList.remove('gravando');
      reconhecimento.stop();
    }

    function compartilharWhatsApp() {
      if (!textoFinal) {
        alert('Nenhuma transcri√ß√£o para compartilhar!');
        return;
      }
      const texto = encodeURIComponent(textoFinal.trim());
      const link = `https://wa.me/?text=${texto}`;
      window.open(link, '_blank');
    }
  </script>

